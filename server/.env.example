# Node.js Development Environment
PORT=8787
NODE_ENV=development

# Database Configuration
# For local development, embedded-postgres is used by default
# For production deployment, you need a standalone PostgreSQL database
DATABASE_URL={{DATABASE_URL}}

# Firebase Configuration (JWKS approach)
FIREBASE_PROJECT_ID={{FIREBASE_PROJECT_ID}}

# Cloudflare Configuration
WORKER_NAME={{WORKER_NAME}}

# Ingestion Provider Configuration
DOCUMENT_STRUCTURER_PROVIDER=ollama-structurer-v1
EMBEDDING_PROVIDER=ollama-emb-v1
INGESTION_WORKER_POLL_MS=2000

# Ollama Configuration
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_STRUCTURER_MODEL=qwen2.5:14b-instruct
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large
OLLAMA_TEMPERATURE=0
# OLLAMA_NUM_CTX=8192

# OpenCode Zen (only needed when DOCUMENT_STRUCTURER_PROVIDER=opencode-zen-structurer-v1)
# OPENCODE_ZEN_API_KEY={{OPENCODE_ZEN_API_KEY}}
OPENCODE_ZEN_BASE_URL=https://api.opencode.ai
OPENCODE_ZEN_STRUCTURER_MODEL=MiniMax M2.5 Free
OPENCODE_ZEN_TEMPERATURE=0
# OPENCODE_ZEN_MAX_TOKENS=4096